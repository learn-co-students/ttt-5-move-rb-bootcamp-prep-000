#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go? Choose number from 1 to 9."
display_board(board)
input = gets.strip
index = input_to_index(input)
move(board, index, player = "X")
display_board(board)
