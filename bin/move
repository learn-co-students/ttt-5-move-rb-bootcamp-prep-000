#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
input = gets.strip
index = input.to_i - 1
input_to_index(index)
move(board, index, value= "X")
display_board(board)
