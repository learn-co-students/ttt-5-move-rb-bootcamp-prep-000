#!/usr/bin/env ruby

require_relative '../lib/move.rb'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
puts "Please enter a number from 1-9 to make your move" 
movelocation = gets.strip
move(board, input_to_index(movelocation), player = "X")
display_board(board)