#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
puts "What position would you like to fill?"
user_input = gets.strip
index = input_to_index(user_input)
move(board, index, char = "X")
display_board(board)


