#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Hey there!"
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go for your move?"
user_input = gets.strip
position = input_to_index(user_input)
move(board, position, "X")
display_board(board)
