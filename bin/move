#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" "," "," "," "," "," "," "," "," "]
puts "Welcome to Tic Tac Toe!"
puts "Please select a square to make your mark in by entering a number 1-9:"
position = input_to_index(gets.strip)
move(board, position)
display_board(board)
