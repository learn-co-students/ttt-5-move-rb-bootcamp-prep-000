#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)
move(board, index, "X")
display_board(board)

# asks the player for the position on the board (1-9) that they can fill out with an X or O.
# will convert the position to an index
# will update the board
# display the updated board
