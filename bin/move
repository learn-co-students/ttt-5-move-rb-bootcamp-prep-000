#!/usr/bin/env ruby
#learn open ttt-5-move-rb-bootcamp-prep-000
require_relative '../lib/move.rb'

# Code your CLI Here
board = [" "," "," "," "," "," "," "," "," "]
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
display_board(board)
input = gets.strip
index = input_to_index(input)
move(board , index , "X")
display_board(board)
