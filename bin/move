#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Please pick a number between 1-9"
display_board(board)

choice = gets.strip

move(board, input_to_index(choice))


display_board(board)