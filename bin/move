#!/usr/bin/env ruby
require 'pry'
require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"

puts "What's your move?"

player_move = gets.strip

index = input_to_index(player_move)

move(board, index)


display_board(board)
