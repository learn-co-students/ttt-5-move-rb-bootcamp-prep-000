#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go? Enter 1-9:"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

input = gets.strip

index = input_to_index(input)

move(board, index)
display_board(board)
