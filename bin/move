#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
  puts "Welcome to Tic Tac Toe!"
  
  board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
  
  puts "Where would you like to go?"
  
  user_index = gets.strip
  
  index = input_to_index(user_index)
  
  move(board, index, "X")
  
  display_board(board)