#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Where would you like to go? (1-9)"

input = gets.strip
index = input_to_index(input)

while (index < 0 || index > 8) do
  puts "Invalid Move! Try again. (1-9)"
  input = gets.strip
  index = input_to_index(input)
end

move(board,index)
display_board(board)
