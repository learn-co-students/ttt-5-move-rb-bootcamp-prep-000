#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Where would you like to go?"
position = gets.strip
index = input_to_index(position)
puts move(board, index, "X")
display_board(board)
