#!/usr/bin/env ruby
require_relative '../lib/move.rb'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toad!"
puts "Where would you like to go?"
puts "Please enter 1-9"
input = gets.strip

position = input_to_index(input)


move(board, position)
display_board(board)
